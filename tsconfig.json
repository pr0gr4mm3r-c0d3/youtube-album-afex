{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		// "types": ["node"],
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*", "./dist/*"],
			"@test/*": ["./test/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"test/**/*.ts",
		"test/**/*.d.ts",
		"test/**/*.tsx",
		"test/**/*.vue",
		"test/**/*.spec.ts"
	],
	"exclude": ["node_modules"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
